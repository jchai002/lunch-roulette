<div class="small-12 columns" id="input-box">

	<%= form_for(@search) do |f| %>
		<% if @search.errors.any? %>
		<div id="error_explanation">
		<h2><%= pluralize(@search.errors.count, "error") %> prohibited this search from being saved:</h2>

		<ul>
			<% @search.errors.full_messages.each do |message| %>
				<li><%= message %></li>
		<% end %>
		</ul>
	</div>
<% end %>
	<%=f.hidden_field :long%>
	<%=f.hidden_field :lat %>

	<div class="small-12 large-5 columns">
		<div class="row">
			<div class="small-8 columns">
				<h3>Max Distance:</h3>
			</div>

			<div class="small-4 columns">
				<input type="text" id="radius" name="search[radius]" value="1" readonly />
			</div>
		</div>
		<div class="range-slider radius" data-slider="3"
			data-options="display_selector: #radius; start: 1; end: 30; step: 1;">
			<span class="range-slider-handle" role="slider" tabindex="0"></span>
			<span class="range-slider-active-segment"></span>
		</div>
	</div>
	<div class="small-12 large-5 columns">
		<div class="row">
			<div class="small-8 columns">
				<h3>Minimum Yelp Rating:</h3>
			</div>
		<div class="show-for-medium-up">
			<div class="small-4 columns">
				<input type="text" id="rating" name="search[rating]" value="3" readonly />
			</div>
		</div>
		</div>

		<div class="show-for-medium-up">
			<div class="range-slider radius" data-slider="3"
				data-options="display_selector: #rating; start: 1; end: 5; step: 0.5;">
				<span class="range-slider-handle" role="slider" tabindex="0"></span>
				<span class="range-slider-active-segment"></span>
			</div>
		</div>

		<div class="show-for-small-only">
			<select name="search[rating]">
				<option value="2" selected>2</option>
				<option value="2.5">2.5</option>
				<option value="3">3</option>
				<option value="3.5">3.5</option>
				<option value="4">4</option>
				<option value="4.5">4.5</option>
				<option value="5">5</option>
			</select>
		</div>

	</div>
	<div class="large-2 columns hide-for-small">
		<%= f.submit "Spin", class: 'small button' %>
	</div>
	<div class="show-for-small small-12 columns">
		<%= f.submit "Spin", class: 'expand button' %>
	</div>
</div>

<% end %>

<div class="small-12 columns">
	<div id="result"></div>
	<div class="static-map" id="map"></div>
</div>
